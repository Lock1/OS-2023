{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build OS",
            "command": "make",
            "args": [
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Launch QEMU",
            "command": "qemu-system-i386",
            "isBackground": true,
            "args": [
                "-S",
                "-s",
                "-cdrom",
                "os2023.iso"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "dependsOn": "Build OS",
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                }
            }
        }
    ],
}